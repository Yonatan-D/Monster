<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/iteminfo" android:orientation="vertical"
	android:layout_width="fill_parent" android:layout_height="wrap_content"
	android:weightSum="1">
	<LinearLayout android:id="@+id/linearLayout1"
			android:layout_height="wrap_content" 
			android:layout_width="match_parent"
			android:orientation="vertical" >
		<RelativeLayout android:layout_height="wrap_content" 
			android:layout_width="match_parent"
			android:background="#fff"
			android:gravity="center"
			android:paddingTop="10dp"
			android:paddingBottom="10dp"
			>
		<Button android:text="支出汇总" 
			android:id="@+id/btnoutinfo"
			android:layout_width="88dp" 
			android:layout_height="35dp"
			android:textSize="15dp"
			android:textColor="#fff"
			android:background="@drawable/info_btn_style"
			android:layout_marginRight="20dp"
			android:layout_marginLeft="10dp"
			android:padding="5dp"
		/>
		<Button android:text="收入汇总" 
			android:id="@+id/btnininfo"
			android:layout_width="88dp" 
			android:layout_height="35dp"
			android:layout_toRightOf="@id/btnoutinfo"
			android:textSize="15dp"
			android:textColor="#fff"
			android:background="@drawable/info_btn_style"
			android:layout_marginRight="10dp"
			android:layout_marginLeft="20dp"
			android:padding="5dp"
			/>
		</RelativeLayout>
		</LinearLayout>
		<LinearLayout android:id="@+id/linearLayout2"
				android:layout_height="wrap_content" 
				android:layout_width="match_parent"
				android:orientation="vertical" 
				android:layout_weight="0.94">
		
		    <Button android:text="- - - 便签信息 - - -" 
			android:id="@+id/btnflaginfo"
			android:layout_width="fill_parent" 
			android:layout_height="wrap_content"
			android:gravity="center"
			android:textSize="16dp"
			android:textStyle="bold"
			android:textColor="#4f4f4f"
			android:background="#fff"
			android:layout_marginTop="5dp"
			android:padding="5dp"
			/>
		    
			<ListView android:id="@+id/lvinfo" 
			android:layout_width="match_parent" 
			android:layout_height="match_parent"
			android:scrollbarAlwaysDrawVerticalTrack="true"
			android:background="#fff"
			/>
		</LinearLayout>
</LinearLayout>
